<!-- Regla para preguntar FCOLOR-->
<!--prueba con varios maps-->

<!--ROJO-->
<category>
<pattern> * roja ^ </pattern>
<template>
    <think>
        <set var="color">rojo</set>
        <set var="numfcol"> <!-- pienso cuantos colores tiene la fruta -->
            <map name="numfcolor"><get name="fruta"/></map>
        </set>
    </think>
    <condition var="numfcol">
        <li value="1">  <!-- si solo tiene un color, lo cogemos del map de los primeros colores -->
            <think>
            <set var="col1">    <!-- guardamos el unico primer color en fcol -->
            		<map name="fcolor1"><get name="fruta"/></map>
        	</set>
        	</think>
        	<condition var="col1">
        	   <!-- <li value="rojo">Si.</li> -->
                <li><value><get name="color"/></value>Si.</li>
        	    <li>No.</li>
            </condition>
        </li>
        <li value="2">    <!-- Si tiene 2 colores posibles -->
            <think>
            <set var="col1">    <!-- guardamos en col1 el primer color del map de los primeros colores-->
                <map name="fcolor1"><get name="fruta"/></map>
            </set>
            <set var="col2">    <!-- guardamos en col2 el segundo color del map de los segundos colores -->
                <map name="fcolor2"><get name="fruta"/></map>
            </set>
            </think>
            <condition var="color">
                <li><value><get var="col1"/></value>Si.</li> <!-- si el col1 es el rojo -->
                <li><value><get var="col2"/></value>Si.</li> <!-- si el col2 es el rojo -->
                <li>No.</li>
            </condition>
        </li>
        <li value="3">    <!-- Si tiene 3 colores posibles -->
            <think>
            <set var="col1">    <!-- guardamos en col1 el primer color del map de los primeros colores-->
                <map name="fcolor1"><get name="fruta"/></map>
            </set>
            <set var="col2">    <!-- guardamos en col2 el segundo color del map de los segundos colores -->
                <map name="fcolor2"><get name="fruta"/></map>
            </set>
            <set var="col3">    <!-- guardamos en col3 el segundo color del map de los segundos colores -->
                <map name="fcolor3"><get name="fruta"/></map>
            </set>
            </think>
            <condition var="color">
                <li><value><get var="col1"/></value>Si.</li> <!-- si el col1 es el rojo -->
                <li><value><get var="col2"/></value>Si.</li> <!-- si el col2 es el rojo -->
                <li><value><get var="col3"/></value>Si.</li> <!-- si el col2 es el rojo -->
                <li>No.</li>
            </condition>
        </li>
    </condition>
</template>
</category>

<category>
    <pattern> * rojo ^</pattern>
    <template><srai> * roja ^ </srai></template>
</category>

